use_frameworks!

def standard_pods
  pod "Monreau"
end

target "Nio iOS" do
  platform :ios, "10.3"
  standard_pods
  target "Nio iOS-Tests" do
    standard_pods
  end
end

target "Nio watchOS" do
  platform :watchos, "3.0"
  standard_pods
end

target "Nio tvOS" do
  platform :tvos, "10.2"
  standard_pods
  target "Nio tvOS-Tests" do
    standard_pods
  end
end

target "Nio macOS" do
  platform :osx, "10.12"
  standard_pods
  target "Nio macOS-Tests" do
    standard_pods
  end
end